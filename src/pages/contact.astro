---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contactanos',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contactanos" title="Envianos tu consulta!" />

  <ContactUs
    id="form"
    title="Contactanos hoy y te responderemos enseguida!"
    subtitle="Te brindaremos asesoria especializada"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electronico',
      },
    ]}
    textarea={{
      label: 'Escribe tu mensaje',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos aqui para ayudarte!"
    items={[
      {
        title: 'Telefono',
        description: '2910382109321',
        icon: 'tabler:headset',
      },
      {
        title: 'Correo electronico',
        description: 'contact@contactanos.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicacion',
        description: 'Calle falsa 123, Buenos Aires, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
