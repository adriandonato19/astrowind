---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Contactanos from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import ContactBanner from '~/components/contactBanner.astro';

const metadata = {
  title: 'Contactanos',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText title="Contactanos" />

  <ContactBanner/>

  <Contactanos
    id="form"
    title="Contactanos hoy y te responderemos enseguida!"
    subtitle="Te brindaremos asesoria especializada"
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Correo electronico',
      },
    ]}
    textarea={{
      label: 'Escribe tu mensaje',
    }}
    disclaimer={{
      label:
        'Aseguro que los datos ingresados son correctos y he suministrado la informaciÃ³n proporcionada en este formulario',
    }}
    description="Envianos un mensaje y te contactaremos en breve"
  />

  <!-- Features2 Widget ************** -->

  
</Layout>
