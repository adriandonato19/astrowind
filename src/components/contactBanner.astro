import Image from "astro/components/Image.astro"
---

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>

<section class="text-center flex justify-center items-center space-x-6">

    <div class="contact-box inline-block bg-white rounded-lg shadow-lg p-6 m-4 w-64 h-72 text-center transition transform hover:-translate-y-2 hover:shadow-2xl">
        <h1 class="text-black text-xl mb-4">Address</h1>
        <i class="fas fa-map-marker-alt fa-3x text-purple-950 mb-4 transition-colors hover:text-blue-700"></i>
        <p class="text-gray-600">
            Bella Vista, Calle 47 Este<br>
            Ciudad de Panama, Panama
        </p>
    </div>

    <div class="contact-box inline-block bg-white rounded-lg shadow-lg p-6 m-4 w-64 h-72 text-center transition transform hover:-translate-y-2 hover:shadow-2xl">
        <h1 class="text-black text-xl mb-4">Telefono</h1>
        <i class="fas fa-phone fa-3x text-purple-950 mb-4 transition-colors hover:text-blue-700"></i>
        <p class="text-gray-600">374-5019</p>
    </div>

    <div class="contact-box inline-block bg-white rounded-lg shadow-lg p-6 m-4 w-64 h-72 text-center transition transform hover:-translate-y-2 hover:shadow-2xl">
        <h1 class="text-black text-xl mb-4">Correo</h1>
        <i class="fas fa-envelope fa-3x text-purple-950 mb-4 transition-colors hover:text-blue-700"></i>
        <p class="text-gray-600">asistente@fercenabogados.com</p>
    </div>

</section>
